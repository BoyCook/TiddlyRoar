<h1>New tiddler</h1>

<% form_for(@tiddler) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.label :tags %><br />
    <%= f.text_field :tags %>
  </p>
  <p>
    <%= f.label :bag %><br />
    <%= f.text_field :bag %>
  </p>
  <p>
    <%= f.label :modifier %><br />
    <%= f.text_field :modifier %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', tiddlers_path %>
